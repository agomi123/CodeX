<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:background="#23FFFFFF"
    android:id="@+id/relared"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/mainr"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/card"
            app:cardCornerRadius="10dp"
            android:elevation="20dp"
            android:layout_margin="5dp">
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/more"
                android:onClick="openfiles"
                android:id="@+id/openfiles"
                android:layout_gravity="left|center"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CodeX- Code Editor"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="@font/font1"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/delete"
                android:id="@+id/clearall"
                android:visibility="gone"
                android:layout_gravity="right|center"
                android:layout_marginRight="10dp"/>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/id1"
            android:layout_below="@id/card"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:onClick="enabletxt"
                        android:id="@+id/enableediting"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/pen"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open Editor"
                        android:id="@+id/t1"
                        android:textSize="12sp"
                        android:onClick="enabletxt"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:layout_below="@id/enableediting"
                        android:layout_marginTop="6dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:onClick="copytext"
                        android:src="@drawable/copy"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:id="@+id/copty"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Copy Code!"
                        android:textSize="12sp"
                        android:id="@+id/t2"
                        android:textColor="@color/black"
                        android:onClick="copytext"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        tools:ignore="UsingOnClickInXml" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:onClick="pastext"
                        android:src="@drawable/paste"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:id="@+id/pasty"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paste Code!"
                        android:textSize="12sp"
                        android:id="@+id/t3"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:onClick="pastext"
                        android:layout_below="@id/copty"
                        android:layout_marginTop="2dp"
                        tools:ignore="UsingOnClickInXml" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:onClick="sharecode"
                        android:id="@+id/sharess"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/share"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share Code"
                        android:id="@+id/t4"
                        android:textSize="12sp"
                        android:onClick="sharecode"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:layout_below="@id/enableediting"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:onClick="savetext"
                        android:src="@drawable/save"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:id="@+id/save"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save Code!"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:onClick="savetext"
                        android:id="@+id/t5"
                        android:layout_below="@id/copty"
                        android:layout_marginTop="2dp"
                        tools:ignore="UsingOnClickInXml" />
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hs"
            android:visibility="gone"
            android:layout_below="@id/id1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="A"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="A"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="B"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="B"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="C"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="C"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="D"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="D"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="E"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="E"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="F"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="F"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="G"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="G"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="H"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="H"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="I"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="I"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="J"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="J"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="K"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="K"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="L"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="L"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="M"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="M"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="N"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="N"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="O"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="O"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="P"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="P"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="Q"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="Q"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="R"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="R"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="S"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="S"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="T"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="T"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="U"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="U"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="V"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="V"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="W"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="W"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="X"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="X"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="Y"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="Y"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="Z"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:backgroundTint="@color/white"
                        android:text="Z"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <EditText
            android:id="@+id/openeditor"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:elevation="10dp"
            android:hint="your code goes here "
            android:fontFamily="@font/font1"
            android:gravity="top|left"
            android:layout_below="@id/hs"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:lines="23"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:scrollHorizontally="false" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/lettera"
            android:id="@+id/captilize"
            android:visibility="gone"
            android:layout_below="@id/hs"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textSize="20sp"/>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/white"
        android:elevation="20dp"
        android:visibility="gone"
        android:id="@+id/runcode"
        android:layout_marginBottom="10dp"
        android:src="@drawable/play"/>

</RelativeLayout>